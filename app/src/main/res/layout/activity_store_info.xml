<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activities.Store_info"
    android:orientation="vertical"
    android:background="@color/bk_white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:id="@+id/header">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_back"
                    android:id="@+id/back_btn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="5dp"/>
                <TextView
                    android:fontFamily="@font/saudi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/text_balck"
                    android:text="@string/store_info"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                android:background="@color/bk_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                >
                <TextView
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:text="@string/username"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <EditText
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bk_edite_bay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/user_name"
                    />

                <TextView
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:text="@string/comerce_id"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <EditText
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bk_edite_bay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/comerce_name"
                    />

                <TextView
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:text="@string/store_name_ar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <EditText
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bk_edite_bay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/store_name_ar"
                    />


                <TextView
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:text="@string/store_name_en"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <EditText
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bk_edite_bay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/store_name_en"
                    />


                <TextView
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:text="@string/addres_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <EditText
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bk_edite_bay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/addres_name"
                    />


                <TextView
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:text="@string/store_phone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <EditText
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bk_edite_bay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/store_phone"
                    />


                <TextView
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:text="@string/ed_email"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <EditText
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bk_edite_bay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/store_email"
                    />


                <Button
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:text="@string/location_gegravique"
                    android:drawableLeft="@drawable/ic_store_location"
                    android:gravity="center"
                    android:paddingLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/store_location"
                    android:background="@drawable/bk_btn_take_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <Button
                    android:fontFamily="@font/saudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_grey"
                    android:text="@string/store_logo"
                    android:drawableLeft="@drawable/ic_camera"
                    android:gravity="center"
                    android:paddingLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/store_logo"
                    android:background="@drawable/bk_btn_take_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <Button
                        android:fontFamily="@font/saudi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="16sp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_white"
                        android:text="@string/save"

                        android:gravity="center"

                        android:layout_marginTop="10dp"
                        android:id="@+id/save_btn"
                        android:background="@drawable/bk_btn_save"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>