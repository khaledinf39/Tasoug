<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:background="@color/bk_white"
            android:outlineSpotShadowColor="@color/bk_grey"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/prod"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="fitXY"
                    android:id="@+id/img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="60.00 ر.س"
                    android:id="@+id/price"
                    android:background="@color/bk_red"
                    android:fontFamily="@font/saudi"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:textColor="@color/text_white"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img"
                    android:paddingRight="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/basbousa"
                        android:id="@+id/name"
                        android:fontFamily="@font/saudi"
                        android:textSize="18sp"
                        android:textColor="@color/text_balck"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name"
                        android:text="@string/count_exis"
                        android:id="@+id/t1"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toLeftOf="@+id/t1"
                        app:layout_constraintTop_toBottomOf="@+id/name"
                        android:text=" : "
                        android:id="@+id/t2"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toLeftOf="@+id/t2"
                        app:layout_constraintTop_toBottomOf="@+id/name"
                        android:text="02"
                        android:id="@+id/quantity"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey"/>
                    android:textColor="@color/text_balck"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/t2"
                        android:text="@string/count_bayed"
                        android:id="@+id/t3"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toLeftOf="@+id/t1"
                        app:layout_constraintTop_toBottomOf="@+id/t2"
                        android:text=" : "
                        android:id="@+id/t4"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toLeftOf="@+id/t4"
                        app:layout_constraintTop_toBottomOf="@+id/t2"
                        android:text="02"
                        android:id="@+id/quantity_sale"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/t3"
                        android:text="10/11/2019"
                        android:id="@+id/date"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_grey"/>

                    <LinearLayout
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                     >
                        <EditText
                            android:id="@+id/tcheck_out"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/bk_edite_bay"
                            android:hint="@string/quantity"
                            android:textSize="16dp"
                            android:inputType="number"
                            android:textColor="@color/text_grey"
                            android:fontFamily="@font/saudi"
                            android:layout_marginTop="5dp"

                            android:padding="5dp"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/contine"
                            android:text="@string/contine"
                            android:textColor="@color/text_white"
                            android:background="@drawable/bk_btn_bay"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/saudi"
                            android:textSize="16sp"
                            android:layout_marginBottom="0dp"/>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>