<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activities.Box"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:id="@+id/header">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:id="@+id/back_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp"/>
        <TextView
            android:fontFamily="@font/saudi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/text_balck"
            android:text="@string/box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:background="@color/bk_grey"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/header"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:background="@color/bk_white"
                android:outlineSpotShadowColor="@color/bk_grey"
                app:cardUseCompatPadding="true"
app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/elect_baymnt"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/name"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:textColor="@color/text_green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"

                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/name"
                        android:text="00 "
                        android:id="@+id/total_elc"
                        android:fontFamily="@font/saudi"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       app:layout_constraintRight_toLeftOf="@+id/total_elc"

                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/name"
                        android:text=" ر.س"

                        android:fontFamily="@font/saudi"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_green"/>
                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/total_elc"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/saudi"
                        android:text="@string/price_in_dore"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:layout_editor_absoluteY="90dp" />

                    <EditText
                        android:inputType="number"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bk_edite_bay"
                        android:padding="10dp"
                        android:id="@+id/scour"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/saudi"
                        android:hint=" 0.0 ر.س"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/t3"
                        tools:layout_editor_absoluteX="253dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/details"
                        android:id="@+id/go_payment"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_blue"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:background="@color/bk_white"
                android:outlineSpotShadowColor="@color/bk_grey"
                app:cardUseCompatPadding="true"

                app:layout_constraintTop_toBottomOf="@+id/card1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/total"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/name2"
                        android:fontFamily="@font/saudi"
                        android:textSize="16sp"
                        android:textColor="@color/text_white_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"

                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/name2"
                        android:text="00"
                        android:id="@+id/total"
                        android:fontFamily="@font/saudi"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_white_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toLeftOf="@+id/total"

                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/name2"
                        android:text=" ر.س"

                        android:fontFamily="@font/saudi"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_white_blue"/>

                    <Button
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bk_btn_save2"
                        android:padding="10dp"
                        android:id="@+id/terment"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/saudi"
                        android:text="@string/terment_today"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/total"
                        tools:layout_editor_absoluteX="253dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_marginTop="20dp"


                    android:id="@+id/no_items"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="لا يوجد عناصر"
                    android:visibility="gone"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>

                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/RV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginStart="17dp"
                    tools:listitem="@layout/row_box"

                    />
                <TextView
                    android:layout_marginTop="20dp"


                    android:id="@+id/see_more"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="عرض المزيد"
                    android:visibility="gone"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>