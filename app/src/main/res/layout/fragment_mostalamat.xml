<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Fragments.mostalamat">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/filter"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/shadoo"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/mostalamat_type"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/saudi"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filterBy"
                    android:fontFamily="@font/saudi"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/table"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shadoo"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toBottomOf="@+id/filter"
            app:layout_constraintLeft_toLeftOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/filter"
                    android:weightSum="5"

                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:fontFamily="@font/saudi"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp"
                        android:paddingRight="3dp"

                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/bk_grey"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/count"
                        android:fontFamily="@font/saudi"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp"
                        android:paddingRight="3dp"

                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/bk_grey"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/prodect"
                        android:fontFamily="@font/saudi"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp"
                        android:paddingRight="3dp"

                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/bk_grey"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:fontFamily="@font/saudi"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp"
                        android:paddingRight="3dp"

                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/bk_grey"/>
                    <TextView
                        android:paddingRight="3dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/nb"
                        android:fontFamily="@font/saudi"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp"
                        />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    android:id="@+id/RV"
                    tools:listitem="@layout/row_mostalamat"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab"

            android:backgroundTint="@color/bk_white"
            app:layout_constraintBottom_toTopOf="@+id/total"
            app:layout_constraintTop_toBottomOf="@+id/table"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_calondre"/>
        <LinearLayout
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/table"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="bottom">
            <androidx.cardview.widget.CardView
                android:layout_gravity="bottom"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/shadoo"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@+id/table"
                app:layout_constraintLeft_toLeftOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="@string/count4"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_grey"
                            android:textSize="18sp"
                            android:paddingRight="3dp"

                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/bk_grey"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:weightSum="4"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="@string/rs"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_grey"
                            android:textSize="16sp"
                            android:paddingRight="3dp"

                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="00"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_grey"
                            android:textSize="16sp"
                            android:paddingRight="3dp"

                            />


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/shadoo"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@+id/table"
                app:layout_constraintLeft_toLeftOf="parent">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="@string/count1"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_grey"
                            android:textSize="16sp"
                            android:paddingRight="3dp"

                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/bk_grey"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:weightSum="4"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="@string/rs"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_grey"
                            android:textSize="14sp"
                            android:paddingRight="3dp"

                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="00"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_grey"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/bk_grey"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="@string/order"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_grey"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="01"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_grey"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="@string/count2"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_green"
                            android:textSize="16sp"
                            android:paddingRight="3dp"

                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/bk_green"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:weightSum="4"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="@string/rs"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_green"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="00"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_green"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/bk_green"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="@string/order"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_green"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="01"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_green"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="@string/count3"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_red"
                            android:textSize="16sp"
                            android:paddingRight="3dp"

                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/bk_red"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:weightSum="4"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="@string/rs"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_red"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="00"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_red"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/bk_red"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="@string/order"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_red"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"
                            android:text="01"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_red"
                            android:textSize="14sp"

                            android:paddingRight="3dp"

                            />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>