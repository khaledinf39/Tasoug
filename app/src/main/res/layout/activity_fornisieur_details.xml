                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/count"
                            android:fontFamily="@font/saudi"
                            android:textColor="@color/text_grey"
                            android:textSize="16sp"
                            android:paddingRight="3dp"

