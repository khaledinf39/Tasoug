                                android:textColor="@color/text_green"
                                android:textSize="16sp"
                                android:paddingRight="3dp"

                                />
                            <View
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:background="@color/bk_green"/>
