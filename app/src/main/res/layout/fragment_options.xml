<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.options">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/bk_white"
          android:outlineSpotShadowColor="@color/bk_grey"
          app:cardCornerRadius="15dp"
          app:cardElevation="5dp"

          app:cardUseCompatPadding="true"
          app:layout_constraintTop_toTopOf="parent">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:background="@drawable/bk_btn_take_img"

             android:id="@+id/store_inf_btn"

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="15dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/saudi"
                android:text="@string/store_info"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/bk_white"
          android:outlineSpotShadowColor="@color/bk_grey"
          app:cardCornerRadius="15dp"
          app:cardElevation="5dp"

          app:cardUseCompatPadding="true"
          app:layout_constraintTop_toTopOf="parent">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:background="@drawable/bk_btn_take_img"

             android:id="@+id/termNconditions_forns"

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="15dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/saudi"
                android:text="@string/term"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/bk_white"
          android:outlineSpotShadowColor="@color/bk_grey"
          app:cardCornerRadius="15dp"
          app:cardElevation="5dp"

          app:cardUseCompatPadding="true"
          app:layout_constraintTop_toTopOf="parent">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:background="@drawable/bk_btn_take_img"
             android:id="@+id/termNconditions_client"

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="15dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/saudi"
                android:text="@string/term_client"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/bk_white"
          android:outlineSpotShadowColor="@color/bk_grey"
          app:cardCornerRadius="15dp"
          app:cardElevation="5dp"

          app:cardUseCompatPadding="true"
          app:layout_constraintTop_toTopOf="parent">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:background="@drawable/bk_btn_take_img"
             android:id="@+id/expenses"

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="15dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/saudi"
                android:text="@string/expenses"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/bk_white"
          android:outlineSpotShadowColor="@color/bk_grey"
          app:cardCornerRadius="15dp"
          app:cardElevation="5dp"

          app:cardUseCompatPadding="true"
          app:layout_constraintTop_toTopOf="parent">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:background="@drawable/bk_btn_take_img"
             android:id="@+id/bonod_expenses"

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="15dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/saudi"
                android:text="@string/bonod_expenses"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>
   </LinearLayout>
</FrameLayout>